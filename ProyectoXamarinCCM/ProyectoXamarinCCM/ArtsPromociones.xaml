<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoXamarinCCM.ArtsPromociones"
             Title="Promociones">
    <ContentPage.Content>
        <StackLayout>
            <ListView x:Name="ListViewDatosPromo" 
                      IsRefreshing="{Binding IsBusy}" 
                      IsPullToRefreshEnabled="true"
                      ItemsSource="{Binding Items}"
                      RefreshCommand="{Binding RefrescarCommand}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal">
                                <Image Source="{Binding imagen}" />
                                <Label Text="{Binding codigo}" HorizontalOptions="FillAndExpand"
                                       VerticalTextAlignment="Center" />
                                
                                <Label Text="{Binding precio}" Margin="5" HorizontalOptions="End"></Label>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>